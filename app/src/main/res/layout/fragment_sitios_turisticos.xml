<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.eider.santarosaturistica.SitiosTuristicosFragment">

    <!--Tercer fragment para la practica3-->

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tfragment3titulo"
                android:textStyle="bold"
                android:textAlignment="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="30sp"
                android:paddingBottom="15dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:layout_height="wrap_content">
            <ImageView
                android:id="@+id/ifragment3imagen"
                android:layout_width="200dp"
                android:layout_height="190dp"
                android:adjustViewBounds="true"
                android:scaleType="fitCenter"/>
            <android.support.v4.widget.Space
                android:layout_width="10dp"
                android:layout_height="0dp" />
            <com.google.android.gms.maps.MapView
                android:layout_width="200dp"
                android:layout_height="190dp"
                android:id="@+id/mapsitiosturisticos"></com.google.android.gms.maps.MapView>

        </LinearLayout>



            <TextView
                android:textAlignment="center"
                android:id="@+id/tfragment3descripcion"
                android:textSize="20sp"
                android:layout_width="280dp"
                android:layout_height="wrap_content" />
            <Button
                android:text="@string/enlace"
                android:id="@+id/bfragment3enlace"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>
    </ScrollView>



</FrameLayout>
