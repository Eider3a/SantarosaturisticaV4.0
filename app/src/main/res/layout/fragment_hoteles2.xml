<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.eider.santarosaturistica.HotelesFragment">

    <!--Primer fragment para la practica3-->

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true"
        android:scrollbars = "vertical"
        android:scrollbarStyle="insideInset">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center">



            <TextView
                android:id="@+id/tfragment1titulo"
                android:textStyle="bold"
                android:textAlignment="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="30sp"
                android:paddingBottom="15dp"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:layout_height="190dp">
                <ImageView
                    android:id="@+id/ifragment1imagen"
                    android:layout_width="200dp"
                    android:layout_height="190dp"
                    android:adjustViewBounds="true"
                    android:maxWidth="200dp"
                    android:maxHeight="190dp"
                    android:scaleType="fitCenter"/>
                <android.support.v4.widget.Space
                    android:layout_width="10dp"
                    android:layout_height="0dp" />
                <com.google.android.gms.maps.MapView
                    android:layout_width="200dp"
                    android:layout_height="190dp"
                    android:id="@+id/maphoteles"></com.google.android.gms.maps.MapView>

            </LinearLayout>

            <TextView
                android:textAlignment="center"
                android:id="@+id/tfragment1descripcion"
                android:textSize="20sp"
                android:layout_width="280dp"
                android:layout_height="wrap_content" />
            <Button
                android:text="@string/enlace"
                android:id="@+id/bfragment1enlace"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />



        </LinearLayout>
    </ScrollView>



</FrameLayout>
